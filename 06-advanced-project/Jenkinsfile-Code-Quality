pipeline {
    agent any
    stages {
        stage('environment variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }
        
        stage('Pull Request Number') {
            when {
                changeRequest target: 'main'
            }
            steps {
                echo "PR: ${CHANGE_ID}"
            }
        }            
        stage('Setup') {
            steps {
                sh '''
                set -eux
                cd "$WORKSPACE"

                # Install Poetry
                curl -sSL https://install.python-poetry.org | python3 -

                # Use Poetry via Python module (NOT binary lookup)
                python3 -m poetry install --with dev
        '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                set -eux
                cd "$WORKSPACE"
                python3 -m poetry run pytest
        '''
            }
        }    
    }
}
