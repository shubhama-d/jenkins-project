pipeline {
    agent any

    environment {
        // Azure / ACR
        ACR_NAME        = 'jekinsreg'
        ACR_LOGIN_SERVER = 'jekinsreg.azurecr.io'
        IMAGE_NAME      = "${ACR_LOGIN_SERVER}/jenkins-flask-app"
        IMAGE_TAG       = "${IMAGE_NAME}:${env.GIT_COMMIT}"

        // AKS
        AKS_CLUSTER     = 'jenkins-demo'
        AKS_RG          = 'shub-poc-rg'

        // GitHub
        GH_TOKEN = credentials('github-access-token')
    }

    stages {

        stage("Check for Git Tag") {
            steps {
                script {
                    def tag = sh(returnStdout: true, script: "git tag --contains").trim()
                    env.GIT_TAG = tag ?: ""
                    env.IMAGE_TAG_RELEASE = "${IMAGE_NAME}:${env.GIT_TAG}"
                    echo "GIT_TAG: ${env.GIT_TAG}"
                }
            }
        }

        stage('Setup') {
            steps {
                sh '''
                   set -eux

                   cd "$WORKSPACE/06-advanced-project"

                   /var/lib/jenkins/.local/bin/poetry --version
                   /var/lib/jenkins/.local/bin/poetry install --with dev
        '''
            }
        }

        stage('Create Release') {
            when {
                expression { env.GIT_TAG == "" }
            }
            steps {
                sh '''
                   set -eux
                   cd "$WORKSPACE/06-advanced-project"

                   /var/lib/jenkins/.local/bin/poetry run semantic-release version
                   /var/lib/jenkins/.local/bin/poetry run semantic-release publish
        '''
            }
        }

        stage("Build and Deploy") {
            when {
                expression { env.GIT_TAG != "" }
            }

            stages {

                stage('Azure Login') {
                    steps {
                        withCredentials([
                            usernamePassword(credentialsId: 'azure-sp', usernameVariable: 'AZURE_CLIENT_ID', passwordVariable: 'AZURE_CLIENT_SECRET'),
                            string(credentialsId: 'azure-tenant-id', variable: 'AZURE_TENANT_ID'),
                            string(credentialsId: 'azure-subscription-id', variable: 'AZURE_SUBSCRIPTION_ID')
                        ]) {
                            sh '''
                                az login --service-principal \
                                  --username $AZURE_CLIENT_ID \
                                  --password $AZURE_CLIENT_SECRET \
                                  --tenant $AZURE_TENANT_ID

                                az account set --subscription $AZURE_SUBSCRIPTION_ID
                            '''
                        }
                    }
                }

                stage('ACR Login') {
                    steps {
                        sh 'az acr login --name ${ACR_NAME}'
                    }
                }

                stage('Build Image') {
                    steps {
                        sh '''
                            docker build \
                              -t ${IMAGE_TAG} \
                              -t ${IMAGE_TAG_RELEASE} .
                        '''
                    }
                }

                stage('Push Image') {
                    steps {
                        sh '''
                            docker push ${IMAGE_TAG}
                            docker push ${IMAGE_TAG_RELEASE}
                        '''
                    }
                }

                stage('Deploy to AKS') {
                    steps {
                        sh '''
                            az aks get-credentials \
                              --resource-group ${AKS_RG} \
                              --name ${AKS_CLUSTER} \
                              --overwrite-existing

                            kubectl set image deployment/flask-app \
                              flask-app=${IMAGE_TAG_RELEASE}
                        '''
                    }
                }
            }
        }
    }
}
