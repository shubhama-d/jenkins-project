pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        PROJECT_DIR      = '06-advanced-project'
        ACR_NAME         = 'jekinsreg'
        ACR_LOGIN_SERVER = 'jekinsreg.azurecr.io'
        IMAGE_NAME       = "${ACR_LOGIN_SERVER}/jenkins-flask-app"
        IMAGE_TAG        = "${IMAGE_NAME}:${env.GIT_COMMIT}"
        AKS_CLUSTER      = 'jenkins-demo'
        AKS_RG           = 'shub-poc-rg'
    }

    stages {
        stage('Setup Dependencies') {
            steps {
                sh '''
                    set -eux
                    cd "$WORKSPACE/${PROJECT_DIR}"
                    /var/lib/jenkins/.local/bin/poetry install --with dev || true
                '''
            }
        }

        stage('Azure Network Repair & Verify') {
            steps {
                withCredentials([
                    usernamePassword(credentialsId: 'azure-sp', usernameVariable: 'AZURE_CLIENT_ID', passwordVariable: 'AZURE_CLIENT_SECRET'),
                    string(credentialsId: 'azure-tenant-id', variable: 'AZURE_TENANT_ID'),
                    string(credentialsId: 'azure-subscription-id', variable: 'AZURE_SUBSCRIPTION_ID')
                ]) {
                    sh '''
                        set -eux
                        
                        # 1. Login
                        az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID
                        az account set --subscription $AZURE_SUBSCRIPTION_ID

                        # 2. Get Agent IP
                        AGENT_IP=$(curl -s https://api.ipify.org)
                        echo "Detected Agent IP: $AGENT_IP"
                        echo $AGENT_IP > agent_ip.txt

                        # 3. FORCE CONFIGURATION (The "Double Gate" Fix)
                        echo "--- FORCING NETWORK CONFIGURATION ---"
                        
                        # GATE 1: Force Public Access Enabled (Must be true for whitelist to work)
                        az acr update --name ${ACR_NAME} --public-network-enabled true
                        
                        # GATE 2: Force Default Action to Deny (Must be Deny for whitelist to work)
                        az acr update --name ${ACR_NAME} --default-action Deny
                        
                        # 4. ADD IP RULE
                        echo "Adding IP Rule..."
                        az acr network-rule add --name ${ACR_NAME} --ip-address "${AGENT_IP}" || echo "Rule likely exists"

                        # 5. VERIFICATION (The "Truth" Step)
                        echo "--- VERIFYING ACTUAL STATE ---"
                        JSON_CONFIG=$(az acr show --name ${ACR_NAME} --output json)
                        
                        IS_PUBLIC=$(echo $JSON_CONFIG | jq -r .publicNetworkAccess)
                        DEFAULT_ACTION=$(echo $JSON_CONFIG | jq -r .networkRuleSet.defaultAction)
                        
                        echo "Public Access: $IS_PUBLIC (Should be 'Enabled')"
                        echo "Default Action: $DEFAULT_ACTION (Should be 'Deny')"
                        
                        echo "--- LISTING ALL ALLOWED IPs ---"
                        # This prints exactly what Azure is allowing. If your IP isn't here, the command failed.
                        az acr network-rule list --name ${ACR_NAME} --output table

                        echo "Waiting 60s for propagation..."
                        sleep 60
                    '''
                }
            }
        }

        stage('ACR Login (Docker)') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'azure-sp', usernameVariable: 'AZURE_CLIENT_ID', passwordVariable: 'AZURE_CLIENT_SECRET')]) {
                    retry(3) {
                        sh '''
                            set -eux
                            echo "Attempting Docker Login..."
                            echo $AZURE_CLIENT_SECRET | docker login ${ACR_LOGIN_SERVER} --username $AZURE_CLIENT_ID --password-stdin
                        '''
                    }
                }
            }
        }

        stage('Build & Push') {
            steps {
                sh '''
                    set -eux
                    cd "$WORKSPACE/${PROJECT_DIR}"
                    docker build -t ${IMAGE_TAG} .
                    docker push ${IMAGE_TAG}
                '''
            }
        }

        stage('Deploy to AKS') {
            steps {
                sh '''
                    set -eux
                    az aks get-credentials --resource-group ${AKS_RG} --name ${AKS_CLUSTER} --overwrite-existing
                    kubectl apply -f ${PROJECT_DIR}/k8s/deployment.yaml
                    kubectl set image deployment/flask-app flask-app=${IMAGE_TAG}
                    kubectl rollout status deployment/flask-app
                '''
            }
        }
    }

    post {
        always {
            withCredentials([usernamePassword(credentialsId: 'azure-sp', usernameVariable: 'AZURE_CLIENT_ID', passwordVariable: 'AZURE_CLIENT_SECRET'), string(credentialsId: 'azure-tenant-id', variable: 'AZURE_TENANT_ID')]) {
                sh '''
                    if [ -f agent_ip.txt ]; then
                        AGENT_IP=$(cat agent_ip.txt)
                        az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID > /dev/null
                        echo "Cleaning up IP $AGENT_IP..."
                        az acr network-rule remove --name ${ACR_NAME} --ip-address "${AGENT_IP}" || true
                    fi
                '''
            }
        }
    }
}
