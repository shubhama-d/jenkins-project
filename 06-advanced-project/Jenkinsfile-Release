pipeline {
    agent any

    environment {
        // Azure / ACR
        ACR_NAME         = 'jekinsreg'
        ACR_LOGIN_SERVER = 'jekinsreg.azurecr.io'
        IMAGE_NAME       = "${ACR_LOGIN_SERVER}/jenkins-flask-app"

        // AKS
        AKS_CLUSTER = 'jenkins-demo'
        AKS_RG      = 'shub-poc-rg'

        // GitHub (for semantic-release)
        GH_TOKEN = credentials('github-access-token')
    }

    stages {

        /* ---------------- RELEASE STAGE ---------------- */
        stage('Create Release (main branch only)') {
            when {
                allOf {
                    branch 'main'
                    not { buildingTag() }
                }
            }
            steps {
                sh '''
                    set -eux
                    cd "$WORKSPACE/06-advanced-project"

                    git config --global user.email "jenkins@ci.local"
                    git config --global user.name "jenkins-bot"

                    /var/lib/jenkins/.local/bin/poetry install --with dev
                    /var/lib/jenkins/.local/bin/poetry run semantic-release version
                    /var/lib/jenkins/.local/bin/poetry run semantic-release publish
                '''
            }
        }

        /* ---------------- BUILD & DEPLOY STAGE ---------------- */
        stage('Build & Deploy (tag only)') {
            when {
                buildingTag()
            }

            environment {
                IMAGE_TAG = "${IMAGE_NAME}:${env.TAG_NAME}"
            }

            stages {

                stage('Azure Login') {
                    steps {
                        withCredentials([
                            usernamePassword(credentialsId: 'azure-sp',
                                usernameVariable: 'AZURE_CLIENT_ID',
                                passwordVariable: 'AZURE_CLIENT_SECRET'),
                            string(credentialsId: 'azure-tenant-id',
                                variable: 'AZURE_TENANT_ID'),
                            string(credentialsId: 'azure-subscription-id',
                                variable: 'AZURE_SUBSCRIPTION_ID')
                        ]) {
                            sh '''
                                az login --service-principal \
                                  -u $AZURE_CLIENT_ID \
                                  -p $AZURE_CLIENT_SECRET \
                                  --tenant $AZURE_TENANT_ID

                                az account set --subscription $AZURE_SUBSCRIPTION_ID
                            '''
                        }
                    }
                }

                stage('ACR Login') {
                    steps {
                        sh 'az acr login --name ${ACR_NAME}'
                    }
                }

                stage('Build Image') {
                    steps {
                        sh '''
                            docker build -t ${IMAGE_TAG} .
                        '''
                    }
                }

                stage('Push Image') {
                    steps {
                        sh '''
                            docker push ${IMAGE_TAG}
                        '''
                    }
                }

                stage('Deploy to AKS') {
                    steps {
                        sh '''
                            az aks get-credentials \
                              --resource-group ${AKS_RG} \
                              --name ${AKS_CLUSTER} \
                              --overwrite-existing

                            kubectl set image deployment/flask-app \
                              flask-app=${IMAGE_TAG}
                        '''
                    }
                }
            }
        }
    }
}
