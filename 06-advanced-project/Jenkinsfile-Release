pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        // Project structure
        PROJECT_DIR = '06-advanced-project'

        // Azure / ACR
        ACR_NAME         = 'jekinsreg'
        ACR_LOGIN_SERVER = 'jekinsreg.azurecr.io'
        IMAGE_NAME       = "${ACR_LOGIN_SERVER}/jenkins-flask-app"
        IMAGE_TAG        = "${IMAGE_NAME}:${env.GIT_COMMIT}"

        // AKS
        AKS_CLUSTER = 'jenkins-demo'
        AKS_RG      = 'shub-poc-rg'
    }

    stages {

        stage('Debug / Environment') {
            steps {
                sh '''
                    printenv
                    ls -la
                '''
            }
        }

        stage('Setup Dependencies') {
            steps {
                sh '''
                    set -eux
                    cd "$WORKSPACE/${PROJECT_DIR}"

                    /var/lib/jenkins/.local/bin/poetry --version
                    /var/lib/jenkins/.local/bin/poetry install --with dev
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                    set -eux
                    cd "$WORKSPACE/${PROJECT_DIR}"

                    /var/lib/jenkins/.local/bin/poetry run pytest
                '''
            }
        }

        stage('Azure Login & Whitelist IP') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'azure-sp',
                        usernameVariable: 'AZURE_CLIENT_ID',
                        passwordVariable: 'AZURE_CLIENT_SECRET'
                    ),
                    string(credentialsId: 'azure-tenant-id', variable: 'AZURE_TENANT_ID'),
                    string(credentialsId: 'azure-subscription-id', variable: 'AZURE_SUBSCRIPTION_ID')
                ]) {
                    sh '''
                        set -eux
                        
                        # 1. Login to Azure CLI
                        az login --service-principal \
                          --username $AZURE_CLIENT_ID \
                          --password $AZURE_CLIENT_SECRET \
                          --tenant $AZURE_TENANT_ID
                        
                        az account set --subscription $AZURE_SUBSCRIPTION_ID

                        # 2. Get Agent Public IP
                        AGENT_IP=$(curl -s https://api.ipify.org)
                        echo "Detected Agent IP: $AGENT_IP"
                        echo $AGENT_IP > agent_ip.txt
                        
                        # 3. Add IP to ACR Firewall
                        # "|| echo" prevents failure if IP exists, but we verify it's there
                        echo "Whitelisting IP on ACR..."
                        az acr network-rule add --name ${ACR_NAME} --ip-address $AGENT_IP || echo "IP already allowed or error ignorable"
                        
                        # 4. CRITICAL: Wait for propagation
                        # Azure firewall rules take time to apply. We wait 60 seconds to be safe.
                        echo "Waiting 60s for firewall rule to propagate..."
                        sleep 60
                    '''
                }
            }
        }

        stage('ACR Login (Docker)') {
            steps {
                withCredentials([
                    usernamePassword(
                        credentialsId: 'azure-sp',
                        usernameVariable: 'AZURE_CLIENT_ID',
                        passwordVariable: 'AZURE_CLIENT_SECRET'
                    )
                ]) {
                    // Retry block: If login fails (due to propagation delay), retry up to 3 times
                    retry(3) {
                        sh '''
                            set -eux
                            echo "Attempting Docker Login..."
                            
                            # Standard docker login
                            echo $AZURE_CLIENT_SECRET | docker login ${ACR_LOGIN_SERVER} \
                                --username $AZURE_CLIENT_ID \
                                --password-stdin
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    set -eux
                    cd "$WORKSPACE/${PROJECT_DIR}"

                    docker build -t ${IMAGE_TAG} .
                    docker image ls | head -20
                '''
            }
        }

        stage('Push Image to ACR') {
            steps {
                sh '''
                    set -eux
                    docker push ${IMAGE_TAG}
                '''
            }
        }

        stage('Deploy to AKS') {
            steps {
                sh '''
                    set -eux

                    az aks get-credentials \
                      --resource-group ${AKS_RG} \
                      --name ${AKS_CLUSTER} \
                      --overwrite-existing

                    # Ensure deployment exists
                    kubectl apply -f ${PROJECT_DIR}/k8s/deployment.yaml

                    # Update deployment with new image
                    kubectl set image deployment/flask-app \
                      flask-app=${IMAGE_TAG}

                    # Verify rollout
                    kubectl rollout status deployment/flask-app
                '''
            }
        }
    }

    post {
        always {
            // Cleanup: Remove the IP from the whitelist
            withCredentials([
                    usernamePassword(
                        credentialsId: 'azure-sp',
                        usernameVariable: 'AZURE_CLIENT_ID',
                        passwordVariable: 'AZURE_CLIENT_SECRET'
                    ),
                    string(credentialsId: 'azure-tenant-id', variable: 'AZURE_TENANT_ID'),
                    string(credentialsId: 'azure-subscription-id', variable: 'AZURE_SUBSCRIPTION_ID')
                ]) {
                sh '''
                    if [ -f agent_ip.txt ]; then
                        AGENT_IP=$(cat agent_ip.txt)
                        echo "Cleaning up: Removing IP $AGENT_IP from ACR firewall..."
                        
                        az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID > /dev/null
                        
                        az acr network-rule remove --name ${ACR_NAME} --ip-address $AGENT_IP || true
                    fi
                '''
            }
        }
    }
}
